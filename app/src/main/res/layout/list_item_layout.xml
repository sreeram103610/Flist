<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/default_field_margin"
              android:paddingRight="@dimen/default_field_margin"
              android:paddingTop="@dimen/default_field_padding_top"
              android:paddingBottom="@dimen/default_field_padding_bottom"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_imageview"
        tools:src="@drawable/ic_flist"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@android:string/cancel"
        android:textSize="@dimen/list_item_name_size"
        android:gravity="center_vertical"
        android:id="@+id/item_name"/>

    <LinearLayout
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_name_size"
        android:gravity="center_vertical"
        tools:text="3"
        android:id="@+id/item_count"/>
</LinearLayout>