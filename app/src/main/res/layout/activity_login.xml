<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/loginBackground"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.maadlabs.flist.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/logo_padding_top"
        android:contentDescription="@null"
        android:src="@drawable/ic_flist"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignInButton"
        android:layout_marginTop="@dimen/google_sign_in_margin_top"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/button_horizontal_padding"
        android:paddingRight="@dimen/button_horizontal_padding"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/anonymousLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/anonymous_button_margin_top"
        android:drawableStart="@drawable/ic_action_account_circle"
        android:drawableLeft="@drawable/ic_action_account_circle"
        android:textAllCaps="false"
        android:text="@string/login_activity_anonymous_sign_in"/>

    <Button
        android:id="@+id/skipLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/skip_button_margin_top"
        android:paddingLeft="@dimen/button_horizontal_padding"
        android:paddingRight="@dimen/button_horizontal_padding"
        android:text="@string/login_activity_skip"
        android:background="@android:color/transparent"/>

</LinearLayout>
